<div>
    <input type="button" id="delete" value="Delete" onclick="deletealert(@Model.Id)" class="btn btn-success" />
    &ensp;
    <a asp-action="ShowData" class="btn btn-success" style="background-color:red">Back to List</a>
</div>


<script>
    function deletealert(id) {
        var formData = new FormData();
        formData.append('Id', id);

        $.ajax({
            type: "POST",
            url: "/User/DeleteUser",
            data: formData,
            processData: false,
            contentType: false,
            dataType: "json",
            success: function (Result) {
                if (Result == "Success") {
                    alert("Deleted Successfully");
                    window.location.href = '@Url.Action("ShowData", "User")'
                }
                else {
                    alert("Something went wrong, Please try again");
                }
            },
            error: function (Result) {
                console.log(Result.data);
            }
        });
    }
</script>